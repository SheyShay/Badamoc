<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="SupprClient" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SupprClientsController">
   <children>
      <Pane prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: #D9D9D9;">
         <children>
            <Label layoutX="67.0" layoutY="88.0" text="Voulez vous supprimer le client ?">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Button fx:id="ButtonNonSupprClient" layoutX="168.0" layoutY="147.0" mnemonicParsing="false" onMouseClicked="#CancelSupprClient" prefHeight="27.0" prefWidth="70.0" styleClass="cancel-btn" stylesheets="@../application/application.css" text="Non">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
            <Button fx:id="ButtonOuiSupprClient" layoutX="259.0" layoutY="147.0" mnemonicParsing="false" onMouseClicked="#SupprClient" prefHeight="27.0" prefWidth="70.0" styleClass="confirme-btn" stylesheets="@../application/application.css" text="Oui">
               <font>
                  <Font size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
